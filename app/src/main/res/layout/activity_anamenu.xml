<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".anamenu" android:background="@drawable/m_lighttodark">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/menu"
            android:id="@+id/Profil" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Hi,Mark!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent" android:textSize="18sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout5">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/bildrim"
                tools:layout_editor_absoluteY="48dp"
                tools:layout_editor_absoluteX="112dp" android:id="@+id/imageView10"/>
        <TextView
                android:text="3 New Messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="228dp" android:id="@+id/textView8"
                android:textColor="@color/colorAccent" android:layout_marginStart="10dp" android:textSize="18sp"/>
    </LinearLayout>
    <View
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:id="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/b_normal_t"
            android:layout_marginTop="50dp"/>
    <com.mikhaellopez.circularimageview.CircularImageView android:layout_width="100dp"
                                                          android:layout_height="100dp"
                                                          app:civ_border="false"
                                                          app:srcCompat="@drawable/ornekres2"
                                                          app:layout_constraintEnd_toEndOf="parent"
                                                          android:layout_marginEnd="8dp"
                                                          app:layout_constraintStart_toStartOf="parent"
                                                          android:layout_marginStart="8dp"
                                                          app:layout_constraintTop_toTopOf="@+id/view2"
                                                          android:layout_marginTop="24dp"
                                                          android:id="@+id/circularImageView"/>
    <com.mikhaellopez.circularimageview.CircularImageView android:layout_width="90dp"
                                                          android:layout_height="90dp"
                                                          app:civ_border="false"
                                                          app:srcCompat="@drawable/ornekres4"
                                                          app:layout_constraintEnd_toEndOf="parent"
                                                          android:layout_marginEnd="8dp"
                                                          android:layout_marginStart="8dp"
                                                          app:layout_constraintTop_toTopOf="@+id/circularImageView"
                                                          android:layout_marginTop="8dp"
                                                          android:id="@+id/circularImageView2"
                                                          app:layout_constraintStart_toEndOf="parent"
                                                          android:layout_marginBottom="8dp"
                                                          app:layout_constraintBottom_toTopOf="@+id/textView24"/>
    <com.mikhaellopez.circularimageview.CircularImageView android:layout_width="90dp"
                                                          android:layout_height="90dp"
                                                          app:civ_border="false"
                                                          app:srcCompat="@drawable/ornekres3"
                                                          android:layout_marginEnd="8dp"
                                                          android:layout_marginStart="8dp"
                                                          app:layout_constraintTop_toTopOf="@+id/circularImageView"
                                                          android:layout_marginTop="8dp"
                                                          android:id="@+id/circularImageView3"
                                                          android:layout_marginBottom="8dp"
                                                          app:layout_constraintBottom_toTopOf="@+id/textView24"
                                                          app:layout_constraintStart_toStartOf="@+id/view2"
                                                          app:layout_constraintEnd_toStartOf="parent"/>
    <TextView
            android:text="Mia Glow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/circularImageView"
            app:layout_constraintEnd_toEndOf="@+id/circularImageView"
            app:layout_constraintStart_toStartOf="@+id/circularImageView" android:textColor="@color/colorAccent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/ornekres2"
            android:id="@+id/imageView11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"/>
    <View
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/view3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorAccent"/>
    <View
            android:layout_width="63dp"
            android:layout_height="200dp"
            android:id="@+id/view4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorAccent" app:layout_constraintStart_toEndOf="parent"
            android:visibility="visible"/>
    <View
            android:layout_width="60dp"
            android:layout_height="200dp"
            android:id="@+id/view5" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorAccent" app:layout_constraintEnd_toStartOf="parent"
            android:visibility="visible"/>
    <TextView
            android:text=".... . -.-- -.-.-- --..--     ... . .     -.-- --- ..-     .- -     - .... .     .--. .- .-. - -.-- --··--     .... --- .--. .     -.-- --- ..-     .- .-. . -.-. --- -- .. -. --.     - ---     . -. .--- --- -.--     -. . .--     -.-- . .- .-. --..--     ..     -.- -. --- .--     -.-- --- ..- -.. --- -. .----. -     .-.. .. -.- .     - .... . ... .     ... - ..- ..-. ..-. ...     - --- ---     -- ..- -.-. ....     -... ..- -     ... - .. .-.. .-..     .-- .- .. -     ..-. --- .-.     -.-- --- ..- .-.-.-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/Mesaj_anamenu"
            app:layout_constraintTop_toTopOf="@+id/view3" app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="@+id/view3" app:layout_constraintBottom_toBottomOf="@+id/view3"
            android:layout_marginBottom="50dp" android:padding="10dp" android:textSize="14sp"
            android:textColor="@color/black"/>
    <TextView
            android:text="5 minutes ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/Mesaj_anamenu" app:layout_constraintStart_toStartOf="@+id/view3"
            android:layout_marginStart="8dp" android:textColor="@color/b_normal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/Mesaj_anamenu"
            app:layout_constraintBottom_toBottomOf="@+id/view3" app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/view3">
        <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"/>
        <TextView
                android:text="Translate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Translate_button" app:layout_constraintEnd_toStartOf="@+id/Replybutton"
                app:layout_constraintTop_toTopOf="@+id/Replybutton"
                app:layout_constraintBottom_toBottomOf="@+id/Replybutton" android:textColor="@color/m_light"
                android:background="@drawable/riple_m" android:layout_weight="1"
                android:gravity="center|end"/>
        <TextView
                android:text="Reply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Replybutton" app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintBottom_toBottomOf="@+id/view3"
                android:textColor="@color/black" android:clickable="true"
                android:background="@drawable/riple_b" android:layout_weight="1" android:gravity="center|end"
                android:paddingEnd="10dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>